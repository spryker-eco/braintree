{% extends model('component') %}

{% define config = {
    name: 'braintree-payment-form',
    tag: 'braintree-payment-form',
} %}

{% define data = {
    form: required,
    scriptSrc: 'https://js.braintreegateway.com/js/braintree-2.32.1.min.js',
} %}

{% define attributes = {
    'data-error-message': 'Braintree.payment_method.error_message' | trans,
    'data-error-message-toggle-class': 'is-hidden',
} %}

{% block body %}
    {% include molecule('script-loader') with {
        class: config.jsName ~ '__script-loader',
        attributes: {
            src: data.scriptSrc,
        },
    } only %}
{% endblock %}
